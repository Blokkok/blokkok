<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnitem_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Iyxan23: can someone design this lmao i'm so bad at this-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cnitem_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cnitem_name"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/cnitem_avatar"
        app:layout_constraintTop_toTopOf="@+id/cnitem_avatar"
        tools:text="Iyxan23" />

</androidx.constraintlayout.widget.ConstraintLayout>