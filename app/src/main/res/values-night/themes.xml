<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlokkokTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#1B1A1A</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnAccent</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>
        <item name="backgroundColor">@color/colorBackgroundDark</item>
    </style>

    <style name="BlokkokTheme.FullScreen" parent="BlokkokTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BlokkokTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="BlokkokTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>